          <li><a href="/users/register">Registrera dig</a></li>
        <% } %>
      </ul>
    </nav>

    <!-- FILTER BAR -->
    <div class="filter-bar">
      <form class="search-sort-form" method="GET" action="/">
        <input type="text" name="q" placeholder="S√∂k adress, ort eller nyckelord" aria-label="S√∂kf√§lt">
        <select name="sortOrder">
          <option value="asc"  <%= query.sortOrder==='asc' ? 'selected' : '' %>>Billigast f√∂rst</option>
          <option value="desc" <%= query.sortOrder==='desc'? 'selected' : '' %>>Dyrast f√∂rst</option>
        </select>
        <select name="houseType">
          <option value="">Alla typer</option>
          <option value="villa">Villa</option>
          <option value="l√§genhet">L√§genhet</option>
          <option value="radhus">Radhus</option>
          <option value="√∂vrigt">√ñvrigt</option>
        </select>
        <input type="number" name="minPrice" placeholder="Min pris" aria-label="L√§gsta pris">
        <input type="number" name="maxPrice" placeholder="Max pris" aria-label="H√∂gsta pris">
        <button type="submit">S√∂k</button>
      </form>
    </div>

    <main class="content">
      <% if (houses.length === 0) { %>
        <p>Inga fastigheter att visa.</p>
      <% } else { %>
        <div class="image-grid">
          <% houses.forEach(house => { %>
            <a class="image-card" href="/house/<%= house._id %>">
              <div class="heart-icon" aria-label="Spara favorit">‚ù§Ô∏è</div>
              <div class="card-content">

                <% if (house.images?.length) { %>
                  <img src="/house/image/<%= house._id %>/0" alt="F√∂rhandsvisning">
                <% } else { %>
                  <img src="/default-house.png" alt="Ingen bild">
                <% } %>

                <div class="card-text">
                  <h2 class="listing-title"><%= house.title %></h2>

                  <ul class="listing-details">
                    <li><strong>Pris:</strong> <%= house.price.toLocaleString('sv-SE') %> kr</li>
                    <li><strong>Boarea:</strong> <%= house.area %> m¬≤</li>
                    <% if (house.biarea)    { %><li><strong>Biarea:</strong> <%= house.biarea %> m¬≤</li><% } %>
                    <% if (house.rooms)     { %><li><strong>Rum:</strong> <%= house.rooms %></li><% } %>
                    <% if (house.lotSize)   { %><li><strong>Tomt:</strong> <%= house.lotSize %> m¬≤</li><% } %>
                    <% if (house.yearBuilt) { %><li><strong>Bygg√•r:</strong> <%= house.yearBuilt %></li><% } %>
                    <% if (house.houseType) { %><li><strong>Typ:</strong> <%= house.houseType %></li><% } %>
                    <% if (house.ownership) { %><li><strong>Uppl√•telse:</strong> <%= house.ownership %></li><% } %>
                    <% if (house.energyClass){%><li><strong>E-klass:</strong> <%= house.energyClass %></li><% } %>
                    <% if (house.runningCosts){%><li><strong>Drift:</strong> <%= house.runningCosts.toLocaleString('sv-SE') %> kr/√•r</li><% } %>
                  </ul>

                  <p class="listing-desc"><%= house.description %></p>
                  <p class="uploader">Uppladdad av <%= house.userName %></p>
                  
                </div>
              </div>
            </a>
          <% }) %>
        </div>
      <% } %>
    </main>

    <script src="/js/menu.js"></script>
    <script src="/js/home.js"></script>
    <script src="/js/themeMode.js"></script>
  </body>
</html>
